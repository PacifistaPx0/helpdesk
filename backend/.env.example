# Environment Configuration
PORT=8080
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/helpdesk?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# SMTP Configuration
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-email-password
SMTP_FROM_EMAIL=noreply@company.com
SMTP_FROM_NAME=Help Desk System

# Application Configuration
APP_NAME=Help Desk System
APP_URL=https://helpdesk.company.com
FRONTEND_URL=https://helpdesk-frontend.company.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# SLA Configuration
DEFAULT_SLA_RESPONSE_HOURS=4
DEFAULT_SLA_RESOLUTION_HOURS=24

# Email Templates
EMAIL_TEMPLATE_PATH=./templates/emails

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
